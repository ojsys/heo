# Production Environment Configuration for cPanel
# Copy this to .env on your production server and update values

# Django Environment
DJANGO_ENV=production

# Security - IMPORTANT: Generate a new secret key!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-generate-new-one

# Debug - MUST be False in production
DEBUG=False

# Allowed Hosts - Update with your domain
ALLOWED_HOSTS=heoeziokwufoundation.org,www.heoeziokwufoundation.org

# Database Configuration (MySQL)
DB_NAME=heoeziok_dbase
DB_USER=heoeziok_db_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=HEO Eziokwu Foundation <noreply@heoeziokwufoundation.org>
ADMIN_EMAIL=admin@heoeziokwufoundation.org

# Site Configuration
SITE_URL=https://heoeziokwufoundation.org
SITE_NAME=HEO Eziokwu Foundation

# Security Settings
SECURE_SSL_REDIRECT=True
