# Django Environment
# Set to 'development' for local dev, 'production' for production
DJANGO_ENV=development

# Security
SECRET_KEY=your-secret-key-here

# Debug (only for development)
DEBUG=True

# Allowed Hosts (comma-separated, for production)
ALLOWED_HOSTS=heoeziokwufoundation.org,www.heoeziokwufoundation.org

# Database (PostgreSQL for production)
# DB_NAME=heo_foundation
# DB_USER=db_user
# DB_PASSWORD=db_password
# DB_HOST=localhost
# DB_PORT=5432

# For production with MySQL, uncomment these:
# DB_NAME=heoeziok_dbase
# DB_USER=heoeziok_db_user
# DB_PASSWORD='y@m~R$PC=7ycb,##'
# DB_HOST=localhost
# DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@heoeziokwufoundation.org
ADMIN_EMAIL=admin@heoeziokwufoundation.org

# Site Configuration
SITE_URL=https://heoeziokwufoundation.org
SITE_NAME=HEO Eziokwu Foundation

# Security Settings (for production)
SECURE_SSL_REDIRECT=True

# AWS S3 (for production media storage - optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Redis (for production caching - optional)
# REDIS_URL=redis://127.0.0.1:6379/1
